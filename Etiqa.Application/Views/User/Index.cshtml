@model IEnumerable<Etiqa.Application.Views.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between mt-5">
    <h1>List of Users</h1>
    <div class="text-end mb-2">
        <a asp-controller="User" asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">List of Users</div>
    <div class="card-body">
        <table class="table table-border table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Skillset)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hobby)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Skillset)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hobby)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "UserDetail", new { username=item.Username }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

